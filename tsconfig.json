{
  "compilerOptions": {
    "lib": ["ES2015"],
    "target": "ES2015",
    "module": "CommonJS",
    "moduleDetection": "force",
    "allowJs": true,
    "moduleResolution": "Node10",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
